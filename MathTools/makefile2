Includes=$(shell gsl-config --cflags) -I./includes
GSL_Libs=$(shell gsl-config --libs)
CXXFlags=-std=c++17

SRCS=$(wildcard ./src/*.C)
OBJS=$(patsubst ./src/%.C, ./obj/%.o, $(SRCS))

MYEXE=./bin/myCalcApp

myCalcApp: $(OBJS)
	g++ $(CXXFlags) $(Includes) main.C -o $(MYEXE) $^ $(GSL_Libs)

./obj/%.o: src/%.C includes/%.h
	g++ $(CXXFlags) $(Includes) -c $< -o $@

clean:
	rm -f $(OBJS) $(TARGET)

